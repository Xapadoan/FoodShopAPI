{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["src/repo/*"],
      "@lib/*": ["src/lib/*"]
    },
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["**/*.ts"],
    "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
